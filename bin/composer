#!/usr/bin/env bash
set -euo pipefail

ROOT_DIR="$(cd "$(dirname "${BASH_SOURCE[0]}")/.." && pwd)"
COMPOSER_PHAR="$ROOT_DIR/.tools/composer.phar"

if [[ ! -f "$COMPOSER_PHAR" ]]; then
  mkdir -p "$ROOT_DIR/.tools"
  curl -sSfL https://getcomposer.org/download/latest-stable/composer.phar -o "$COMPOSER_PHAR"
fi

exec php "$COMPOSER_PHAR" "$@"
